# API configuration
PUBLIC_API_BASE_URL=http://localhost:8000
PUBLIC_API_TIMEOUT=30000

# Application configuration
PUBLIC_APP_NAME=GeoML-Hub
PUBLIC_APP_VERSION=1.0.0
PUBLIC_APP_DESCRIPTION=首个地理领域机器学习模型库

# Theme configuration
PUBLIC_DEFAULT_THEME=light
PUBLIC_THEME_STORAGE_KEY=geoml-theme

# Internationalization configuration
PUBLIC_DEFAULT_LOCALE=zh-CN
PUBLIC_AVAILABLE_LOCALES=zh-CN,en-US
PUBLIC_LOCALE_STORAGE_KEY=geoml-locale

# Pagination configuration
PUBLIC_DEFAULT_PAGE_SIZE=20
PUBLIC_MAX_PAGE_SIZE=100

# File upload configuration
PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif
PUBLIC_ALLOWED_FILE_TYPES=application/pdf,text/markdown

# Feature flags
PUBLIC_ENABLE_REGISTRATION=true
PUBLIC_ENABLE_COMMENTS=false
PUBLIC_ENABLE_RATINGS=true